<h1>Comentarios</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Ver este comentario", comment, class: "btn btn-primary" %>
      <hr class="border-bottom border-2">
    </p>
  <% end %>
</div>

<%= link_to "Nuevo comentario", new_comment_path, class: "btn btn-primary" %>
